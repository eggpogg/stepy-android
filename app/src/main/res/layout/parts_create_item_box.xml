<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createTodoContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:layout_gravity="bottom"
    android:background="@drawable/create_todo_bg_2"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/createTodo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="New item."
        android:imeOptions="actionGo"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/createTodoBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/cyan_400"
        android:padding="20dp"
        android:src="@drawable/ic_create_white_18dp"/>

</LinearLayout>
